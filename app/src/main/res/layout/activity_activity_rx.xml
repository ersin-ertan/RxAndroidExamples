<RelativeLayout android:layout_height = "match_parent"
                android:layout_width = "match_parent"
                android:paddingBottom = "@dimen/activity_vertical_margin"
                android:paddingLeft = "@dimen/activity_horizontal_margin"
                android:paddingRight = "@dimen/activity_horizontal_margin"
                android:paddingTop = "@dimen/activity_vertical_margin"
                tools:context = "com.nullcognition.rxandroidexamples.ActivityRx"
                xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:tools = "http://schemas.android.com/tools"
	>

	<EditText
		android:id = "@+id/etRx"
		android:layout_alignParentEnd = "true"
		android:layout_alignParentLeft = "true"
		android:layout_alignParentRight = "true"
		android:layout_alignParentStart = "true"
		android:layout_alignParentTop = "true"
		android:layout_height = "wrap_content"
		android:layout_width = "wrap_content"
		/>

	<Button
		android:id = "@+id/btRx"
		android:layout_alignParentEnd = "true"
		android:layout_alignParentLeft = "true"
		android:layout_alignParentRight = "true"
		android:layout_alignParentStart = "true"
		android:layout_below = "@+id/etRx"
		android:layout_height = "wrap_content"
		android:layout_width = "wrap_content"
		android:text = "New Button"
		/>

	<EditText
		android:id = "@+id/etRx2"
		android:layout_alignEnd = "@+id/btRx"
		android:layout_alignParentLeft = "true"
		android:layout_alignParentStart = "true"
		android:layout_alignRight = "@+id/btRx"
		android:layout_below = "@+id/btRx"
		android:layout_height = "wrap_content"
		android:layout_width = "wrap_content"
		/>

	<EditText
		android:id = "@+id/etRx3"
		android:layout_alignEnd = "@+id/etRx2"
		android:layout_alignParentLeft = "true"
		android:layout_alignParentStart = "true"
		android:layout_alignRight = "@+id/etRx2"
		android:layout_below = "@+id/etRx2"
		android:layout_height = "wrap_content"
		android:layout_width = "wrap_content"
		/>

</RelativeLayout>
